<br/>

<%= semantic_form_for(@user) do |form| %>

  <%= form.inputs :name => "User" do %>
    <%= form.input :name %>
    <%= form.input :email %>
    <%= form.input :password %>
    <%= form.input :password_confirmation %>
  <% end %>

  <%= form.inputs :name => "Roles" do %>
    <%= form.input :roles, :as => :check_boxes %>
  <% end %>

  <% form.buttons do %>
    <%= form.commit_button %>
  <% end %>

<% end %>
<hr/>

